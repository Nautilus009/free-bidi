{
  "name": "free-bidi",
  "displayName": "Free Bidi Editor",
  "description": "Converts RTL encoded (such as ISO-8859-8 or ISO-8859-6) files to UTF-8 with LRO added before every RTL language (such as Hebrew or Arabic) segments for free bidi display, preserving bidirectional display",
  "version": "0.0.10",
  "publisher": "NLTC",
  "icon": "assets/free-bidi-icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:*.cob"
  ],
  "categories": [
    "Other"
  ],
  "keywords": [
    "COBOL",
    "RTL",
    "Hebrew",
    "ISO-8859-8",
    "Arabic",
    "ISO-8859-6",
    "RTL language",
    "RTL encoding",
    "UTF-8",
    "bidi"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "COBOLIT",
        "extensions": [
          ".cob",
          ".inc",
          ".cpy",
          ".pco"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "free-bidi.convert",
        "title": "Free Bidi Editor: Convert File"
      }
    ],
    "configuration": {
      "title": "Free Bidi",
      "properties": {
        "freeBidi.rtlEncoding": {
          "type": "string",
          "default": "ISO-8859-8",
          "description": "Encoding used for RTL source files when reading original files and saving changes back."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/iconv-lite": "^0.0.1",
    "@types/mocha": "10.0.10",
    "@types/node": "^16",
    "@types/vscode": "^1.85.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@vscode/vsce": "^3.7.1",
    "iconv-lite": "^0.6.3"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nautilus009/free-bidi.git"
  }
}
